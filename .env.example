# Slack Configuration
# Get these from https://api.slack.com/apps > Your App > OAuth & Permissions
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# AWS Configuration
AWS_REGION=us-west-2
AWS_AVAILABILITY_ZONE=us-west-2a
# Optional: AWS_PROFILE=default

# API Keys (for New Relic and GitHub CLI)
# Get from: https://one.newrelic.com/launcher/api-keys-ui.launcher
NEW_RELIC_API_KEY=NRAK-your-key-here
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-token-here

# Optional AWS Credentials (if not using IAM role)
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_SESSION_TOKEN=...

# opencode Server Configuration
# Auto-generated if not provided (minimum 16 characters)
# OPENCODE_SERVER_PASSWORD=your-secure-password-here

# Container Configuration
GURT_CONTAINER_IMAGE=gurt-sandbox:latest

# Infrastructure (optional)
# KMS_KEY_ID=alias/aws/ebs

# PostgreSQL Database Configuration
# Option 1: Use DATABASE_URL (required for Flyway migrations)
# DATABASE_URL=postgresql://user:password@localhost:5432/gurt

# Option 2: Use individual parameters (app will construct the connection string)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=gurt

# Sandbox Provider Configuration
# SANDBOX_PROVIDER=bedrock  # Options: bedrock, local
# LOCAL_SANDBOX_IMAGE=gurt-sandbox:latest

# Logging
LOG_LEVEL=info
