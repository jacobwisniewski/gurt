# Docker Compose Environment
# Copy this to .env and customize for local development

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# AWS Configuration
AWS_REGION=us-west-2
AWS_AVAILABILITY_ZONE=us-west-2a

# API Keys
NEW_RELIC_API_KEY=NRAK-your-key-here
GITHUB_TOKEN=ghp_your-token-here

# PostgreSQL - Matches docker-compose.yml service
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=gurt
POSTGRES_PASSWORD=gurt
POSTGRES_DB=gurt

# Or use DATABASE_URL (required for migrations)
DATABASE_URL=postgresql://gurt:gurt@localhost:5432/gurt

# Container Configuration
GURT_CONTAINER_IMAGE=gurt-sandbox:latest

# opencode Server Password (auto-generated if not set)
# OPENCODE_SERVER_PASSWORD=your-secure-password-min-16-chars

# Logging
LOG_LEVEL=debug

# Model Configuration
MODEL_PROVIDER=bedrock
MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
