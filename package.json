{
  "name": "gurt",
  "version": "0.1.0",
  "description": "Slack bot with sandboxed opencode instances for CLI execution",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "dotenv -e .env -- tsx watch src/index.ts",
    "start": "dotenv -e .env -- node dist/index.js",
    "lint": "oxlint src",
    "typecheck": "tsc --noEmit",
    "build:container": "docker build --platform linux/arm64 -t gurt-sandbox:latest -f docker/Dockerfile .",
    "deploy:personal": "agentcore launch --local-build",
    "deploy:rea": "agentcore launch",
    "infra:up": "./scripts/dev.sh up",
    "infra:down": "./scripts/dev.sh down",
    "infra:migrate": "./scripts/dev.sh migrate",
    "infra:logs": "./scripts/dev.sh logs",
    "infra:reset": "./scripts/dev.sh reset",
    "infra:tools": "./scripts/dev.sh tools",
    "test": "vitest",
    "db:migrate": "bash scripts/migrate.sh migrate",
    "db:clean": "bash scripts/migrate.sh clean"
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^4.0.67",
    "@aws-sdk/client-bedrock-agentcore": "^3.998.0",
    "@aws-sdk/client-ec2": "^3.0.0",
    "@chat-adapter/slack": "^4.14.0",
    "@opencode-ai/sdk": "^1.2.15",
    "ai": "^6.0.103",
    "chat": "^4.14.0",
    "kysely": "^0.28.11",
    "pg": "^8.19.0",
    "pino": "^8.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.0",
    "dotenv-cli": "^7.3.0",
    "oxlint": "^0.15.0",
    "pino-pretty": "^10.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
